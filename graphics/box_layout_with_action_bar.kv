<BoxLayoutWithActionBar>:
    


    orientation: "vertical"
    ActionBar:
        background_image : ''
        background_down: ''
        background_color: [0,0,1,1]
        border : [0,0,0,0]
        canvas.after:
            Color:
                rgba : 1,1,1,1
            Line:
                points : 0,self.y,self.width,self.y
                width:2
        ActionView:
            ActionPrevious:
                
                font_name: "fonts/pixel.TTF"
                #on_release: root.parent.parent.pop()     # on remonte dans les parents : BoxLayoutWithActionBar->Screen->ScreenManager
                on_release: app.manager.pop()
                app_icon : "images/lab_logo.png"
                app_icon_height : "35dp"
                app_icon_width : "35dp"
            ActionLabel:
                text: root.title
                font_name: "fonts/pixel.TTF"
                color: 1,1,1,1
                size_hint_x: None
                halign: "left"
                valign: "middle"    
                width: self.texture_size[0] + dp(20)
