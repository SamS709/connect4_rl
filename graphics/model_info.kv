<MyDropDown>:
    button_color : root.button_color
    font_size: self.width * 0.08
    background_color: 0, 0, 0, 0
    background_normal: ""
    font_name: "graphics/fonts/pixel.TTF"
    canvas.before:
        Color:
            rgba: self.button_color
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [0]
        Color:
            rgba: root.line_button_color
        Line:
            rounded_rectangle : self.x+2, self.y, self.width-4, self.height-2, 0, 0, 0, 0, 100
            width : root.line_width


<InfoLabel>:
    font_name : "graphics/fonts/pixel.TTF"
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos
        Color:
            rgba: root.line_button_color
        Line:
            width : root.line_width
            rectangle : self.x+root.line_width, self.y+root.line_width, self.width-2*root.line_width, self.height-2*root.line_width
